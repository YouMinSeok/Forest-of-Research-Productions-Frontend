{
  "name": "research-board-frontend",
  "version": "2.0.0",
  "private": true,
  "description": "연구실용 대규모 게시판 시스템 - 프론트엔드",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.8.3",
    "dayjs": "^1.11.13",
    "emoji-picker-react": "^4.12.0",
    "framer-motion": "^12.6.2",
    "gsap": "^3.12.7",
    "http-proxy-middleware": "^3.0.5",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "react-error-boundary": "^4.1.2",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.14.0",
    "react-lazy-load-image-component": "^1.6.2",
    "react-pdf": "^9.2.1",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.3.0",
    "react-scripts": "^5.0.1",
    "react-textarea-autosize": "^8.5.8",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "react-window-infinite-loader": "^1.0.9",
    "react-zoom-pan-pinch": "^3.7.0",
    "web-vitals": "^4.2.4",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "scripts": {
    "start": "react-scripts start --host 0.0.0.0",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx --fix",
    "lint:check": "eslint src --ext .js,.jsx",
    "format": "prettier --write src/**/*.{js,jsx,css}",
    "format:check": "prettier --check src/**/*.{js,jsx,css}",
    "performance": "lighthouse http://localhost:3000 --output html --output-path ./performance-report.html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-no-target-blank": "error",
      "react/no-array-index-key": "warn",
      "react/prop-types": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "prefer-const": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-react-hooks": "^5.1.0",
    "lighthouse": "^12.2.1",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "homepage": ".",
  "performance": {
    "budgets": [
      {
        "type": "bundle",
        "name": "main",
        "maximumWarning": "500kb",
        "maximumError": "1mb"
      },
      {
        "type": "initial",
        "maximumWarning": "300kb",
        "maximumError": "500kb"
      }
    ]
  }
}
